<%= render partial: "layouts/header.html.erb" %>

<h1>マニュアルのページ</h1>
<div class = "manual_post">
<%= form_with model: @manual, url: manuals_path, local: true do |f| %>
  <%# <%= render 'shared/error_messages', model: f.object %>
    <%= f.text_field :title, placeholder: "例）ランチの盛付け" %>
    <%= f.file_field :image %>
    <%= f.text_area :explanation, placeholder: "例）葉っぱは30g,トッピングは３種類", rows: "10" %></div>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
    <%= f.submit '投稿する' %>
<% end %>
</div>